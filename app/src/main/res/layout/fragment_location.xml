<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.howest.nmct.googlemapsapp.LocationFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtOpdracht"
        android:textSize="30dp"
        android:textColor="#00adef"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:textColor="#00adef"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/txtOpdracht"
        android:layout_centerHorizontal="true"
        android:text="Vul de opgegeven coordinaten in:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LAT"
        android:id="@+id/textView3"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LON"
        android:id="@+id/textView4"
        android:layout_marginStart="53dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/txtOpdracht" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtLat"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/txtOpdracht"
        android:hint="Bijv. &quot;50.827981&quot;"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtLon"
        android:layout_alignTop="@+id/txtLat"
        android:layout_alignEnd="@+id/textView2"
        android:layout_toEndOf="@+id/txtOpdracht"
        android:hint="Bijv. &quot;3.272589&quot;"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toon op Map"
        android:id="@+id/btnToon"
        android:layout_below="@+id/txtLat"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="48dp"
        android:layout_alignEnd="@+id/textView4"
        android:background="#00adef"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>
